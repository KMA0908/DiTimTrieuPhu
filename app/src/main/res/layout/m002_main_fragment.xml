<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bg_avatar_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_play_answer" />

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_no_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_person"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_player_name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_player_level"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:paddingHorizontal="8dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_bg_stamina"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/ic_play_answer" />

        <ImageView
            android:id="@+id/iv_stamina_icon"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_stamina" />

        <TextView
            android:id="@+id/tv_player_stamina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/stamina"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="bottom|center">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.8"
            android:src="@drawable/ic_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_play_now"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_play_now" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:src="@drawable/ic_shop" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_bag"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:src="@drawable/bag" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_highScore"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_champion" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_info"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_info" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/iv_music"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/ic_settings" />
        </TableRow>

    </LinearLayout>


</LinearLayout>
