<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tutorial_background"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginVertical="16dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="Bạn sẽ gọi cho ai?"
        android:textColor="@color/white"
        android:id="@+id/tv_idea_audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_people_call"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:background="@color/colorTint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_thank_people"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="OK"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>