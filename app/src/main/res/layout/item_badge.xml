<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/badge_item_bg"
    android:padding="8dp"
    android:layout_marginVertical="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_icon_badge"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_icon_badge"
        android:layout_toStartOf="@id/bt_equip"
        android:layout_marginStart="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_badge_name"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <Button
        android:layout_centerVertical="true"
        android:id="@+id/bt_equip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/equip"
        android:backgroundTint="@color/green"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>